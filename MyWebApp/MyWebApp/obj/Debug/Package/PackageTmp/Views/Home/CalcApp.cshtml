@model string

@{
    ViewBag.Title = "CalcApp";
}

<h1 style="text-align: center;">Calculator</h1>   
<form method="post" action="/Home/CalcApp">
    First Value: <input type="number" name="ValA" value="0"> <br>
    Second Value: <input type="number" name="ValB" value="0"> <br>
    Calculation Type: <br>
    <input type="radio" name="Op" value="1"> Add <br>
    <input type="radio" name="Op" value="2"> Subtract <br>
    <input type="radio" name="Op" value="3"> Multiply <br>
    <input type="radio" name="Op" value="4"> Divide <br>
    <button>Submit</button>
</form>
<p>Answer: @Model </p>

